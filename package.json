{
  "name": "devcontainers-terminal-image-paste",
  "displayName": "DevContainers Terminal Image Paste",
  "description": "Paste images from clipboard to DevContainer workspace when using terminal",
  "publisher": "touyu",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "activationEvents": [],
  "main": "./src/extension.js",
  "extensionKind": ["ui", "workspace"],
  "repository": {
    "type": "git",
    "url": "https://github.com/touyu/devcontainers-terminal-image-paste"
  },
  "contributes": {
    "commands": [
      {
        "command": "devcontainers-terminal-image-paste.pasteImage",
        "title": "Paste Image from Clipboard"
      }
    ],
    "keybindings": [
      {
        "command": "devcontainers-terminal-image-paste.pasteImage",
        "key": "cmd+v",
        "mac": "cmd+v",
        "when": "terminalFocus && remoteName"
      }
    ],
    "configuration": {
      "title": "DevContainers Terminal Image Paste",
      "properties": {
        "devcontainersTerminalImagePaste.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable clipboard image paste feature in this workspace",
          "scope": "resource"
        },
        "devcontainersTerminalImagePaste.saveDir": {
          "type": "string",
          "default": "./tmp",
          "description": "Directory to save clipboard images (relative to workspace root)"
        },
        "devcontainersTerminalImagePaste.fileNamePattern": {
          "type": "string",
          "default": "clipboard-{timestamp}.png",
          "description": "File name pattern for saved images. {timestamp} will be replaced with current timestamp"
        }
      }
    }
  },
  "scripts": {
    "test": "echo \"No tests yet\"",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^2.19.0"
  }
}